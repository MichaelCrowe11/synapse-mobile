# Fastlane Appfile - Application-specific configuration

# For Android
package_name("com.michaelcrowe.synapsemobile")

# For iOS
app_identifier("com.michaelcrowe.synapsemobile")
apple_id(ENV["APPLE_ID"] || "your-apple-id@example.com")
itc_team_id(ENV["ITC_TEAM_ID"])
team_id(ENV["TEAM_ID"])

# Git URL for your repo
git_url("https://github.com/MichaelCrowe11/synapse-mobile.git")

# You can specify different app identifiers per lane
for_platform :ios do
  app_identifier("com.michaelcrowe.synapsemobile")
end

for_platform :android do
  package_name("com.michaelcrowe.synapsemobile")
end